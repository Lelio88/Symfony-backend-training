{% extends 'base.html.twig' %}

{% block title %}Liste des tâches
{% endblock %}

{% block body %}
	<h1>Liste des tâches</h1>
	<table class="table-auto">
		<thead>
			<tr>
				<th scope="col">ID</th>
				<th scope="col">Titre</th>
				<th scope="col">Date d'échéance</th>
			</tr>
		</thead>
		<tbody>
			{% if tasks is defined %}
				{% for task in tasks %}
					<tr>
						<th>{{task.id}}</th>
						<th>{{task.name}}</th>
						<th>{{task.dueAt ? task.dueAt|date('d/m/Y') : 'Pas de date'}}</th>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucune tâche trouvée.</td>
					</tr>
				{% endfor %}
            {% else %}
                <tr>
                    <td colspan="3">Aucune tâche trouvée.</td>
                </tr>
            {% endif %}
			</tbody>
		</tbody>
	</table>
{% endblock %}
